@using System.Collections.Generic
@using WorkWithEF.ViewModels
@model TaskViewModel

@{
    ViewBag.Title = "EditTasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit task #@ViewBag.taskId</h2>

<form action="/" method="post">
    <input type="hidden" name="taskId" value="@ViewBag.task.Id" />
    <input type="text" name="taskName" value="@ViewBag.task.Name" />
    <input type="text" name="taskDescription" value="@ViewBag.task.Description" />
    <input type="text" name="taskPerformer" value="@ViewBag.task.Performer" />
    <input type="submit" name="submit" value="End editing" />
</form>
