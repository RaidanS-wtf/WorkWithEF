@using System.Collections.Generic
@using WorkWithEF.ViewModels
@model TaskViewModel

@{
    ViewBag.Title = "Create new task";
}
<h2>Create new task</h2>

<form asp-controller="Task" asp-action="CommitCreate">
    <table>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" /></td>
            <td><span asp-validation-for="Name" style="color:red"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Description"></label> </td>
            <td><input asp-for="Description" /></td>
            <td><span asp-validation-for="Description" style="color:red"></span> </td>
        </tr>
        <tr>
            <td><label asp-for="Performer"></label></td>
            <td><input asp-for="Performer"></td>
            <td> <span asp-validation-for="Performer" style="color:red"></span> </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" id="submitbutton" value="Submit" /></td>
        </tr>
    </table>
</form>
